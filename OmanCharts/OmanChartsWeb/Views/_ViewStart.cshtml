@{
    if (TempData["role"] != null)
    {
        if (TempData["role"]=="Admin")
        {
            Layout = "_AdminLayout";
        }
        else if (TempData["role"]=="Customer")
        {
            Layout = "_UserLayout";
        }
        else
        {
            Layout = "_PublicLayout";
        }
    }
    else
    {
        Layout = "_PublicLayout";
    }
}
