@model Zone
@{
    ViewBag.Title = "Add a Zone";
    Layout = "_AdminLayout";
}

<h2>Add a Zone <a asp-action="Index" asp-area="" asp-controller="Zone" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddZone" method="post">
    <div class="form-group">
        <label for="Name">Zone Name:</label>
        <input class="form-control" name="ZoneName" asp-for="ZoneName" placeholder="Zone Name" />
    </div>
    <div class="form-group">
        <label for="Latitude">Latitude:</label>
        <input class="form-control" name="Latitude" asp-for="Latitude" placeholder="Latitude" />
    </div>
    <div class="form-group">
        <label for="Longitude">Longitude:</label>
        <input class="form-control" name="Longitude" asp-for="Longitude" placeholder="Longitude" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add Zone</button>
    </div>
</form>