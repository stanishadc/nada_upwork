@model DashBoardStatistic
@{
    ViewData["Title"] = "Home Page";
    Layout = "_PublicLayout";
}
<script type="text/javascript">
    window.onload = function () {
        var projectoptions = {
            series: @Html.Raw(ViewBag.ProjectSeries),
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: @Html.Raw(ViewBag.Labels),
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        var projectchart = new ApexCharts(document.querySelector("#projectchart"), projectoptions);
        projectchart.render();

        var labouroptions = {
            series: @Html.Raw(ViewBag.LabourSeries),
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: @Html.Raw(ViewBag.Labels),
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        var labourchart = new ApexCharts(document.querySelector("#labourchart"), labouroptions);        
        labourchart.render();

        var investorsoptions = {
            series: @Html.Raw(ViewBag.InvestorSeries),
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: @Html.Raw(ViewBag.Labels),
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        var investorchart = new ApexCharts(document.querySelector("#investorschart"), investorsoptions);
        investorchart.render();

        var orateoptions = {
            series: @Html.Raw(ViewBag.ORateSeries),
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: @Html.Raw(ViewBag.Labels),
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        var oratechart = new ApexCharts(document.querySelector("#oRatechart"), orateoptions);
        oratechart.render();
    }
</script>
<div class="row">
    <div class="col">
        <div class="h-100">
<div class="row">
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0"> Total Investments</p>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-4">
                    <div>
                        <h4 class="fs-22 fw-semibold ff-secondary mb-4"><label class="form-label">@Html.DisplayFor(model => model.TotalInvestments)</label> (OMR) </h4>
                        <a href="" class="text-decoration-underline"><label class="form-label">@Html.DisplayFor(model => model.LastUpdated)</label></a>
                    </div>
                </div>
            </div><!-- end card body -->
        </div><!-- end card -->
    </div><!-- end col -->
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0"> Total Labour</p>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-4">
                    <div>
                        <h4 class="fs-22 fw-semibold ff-secondary mb-4"><label class="form-label">@Html.DisplayFor(model => model.TotalLabour)</label></h4>
                        <a href="" class="text-decoration-underline"><label class="form-label">@Html.DisplayFor(model => model.LastUpdated)</label></a>
                    </div>
                </div>
            </div><!-- end card body -->
        </div><!-- end card -->
    </div><!-- end col -->
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0"> Omanization Rate</p>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-4">
                    <div>
                        <h4 class="fs-22 fw-semibold ff-secondary mb-4"><label class="form-label">@Html.DisplayFor(model => model.OmanizationRate)</label>% </h4>
                        <a href="" class="text-decoration-underline"><label class="form-label">@Html.DisplayFor(model => model.LastUpdated)</label></a>
                    </div>
                </div>
            </div><!-- end card body -->
        </div><!-- end card -->
    </div><!-- end col -->
    <div class="col-xl-3 col-md-6">
        <!-- card -->
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1 overflow-hidden">
                        <p class="text-uppercase fw-medium text-muted text-truncate mb-0"> Total Projects</p>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-4">
                    <div>
                        <h4 class="fs-22 fw-semibold ff-secondary mb-4"><label class="form-label">@Html.DisplayFor(model => model.TotalProjects)</label></h4>
                        <a href="" class="text-decoration-underline"><label class="form-label">@Html.DisplayFor(model => model.LastUpdated)</label></a>
                    </div>
                </div>
            </div><!-- end card body -->
        </div><!-- end card -->
    </div><!-- end col -->
</div>
<div class="row">
    @foreach (var r in Model.ZonesList)
    {
        <div class="col-xl-3 col-md-6">
            <!-- card -->
            <a asp-action="ProjectZone" asp-controller="Home" asp-route-Id="@r.ZoneId" class="text-decoration-underline">
                <div class="card card-animate">
                    <div class="card-body">
                        <div class="d-flex align-items-end justify-content-between mt-4">

                            <h4 class="fs-22 fw-semibold ff-secondary mb-4"><label class="form-label">@r.ZoneName Zone</label> </h4>

                        </div>
                    </div><!-- end card body -->
                </div><!-- end card -->
            </a>
        </div>
    }
</div>
