@model DashBoardStatistic
@{
    @using Microsoft.AspNetCore.Http;
    @inject IHttpContextAccessor httpContextAccessor
    ViewData["Title"] = "Dashboard";
    string role = httpContextAccessor.HttpContext.Session.GetString("Role");
    if (!string.IsNullOrEmpty(role))
    {
        if (role.ToString() == "Admin")
        {
            Layout = "_AdminLayout";
        }
        else if (role.ToString() == "Customer")
        {
            Layout = "_UserLayout";
        }
        else
        {
            Layout = "_PublicLayout";
        }
    }
    else
    {
        Layout = "_PublicLayout";
    }
}
<script type="text/javascript">
    window.onload = function () {
        var upadatedonutchart, chartPieBasicColors = getChartColorsArray("projectchart"),
            chartDonutBasicColors = (chartPieBasicColors && (options = {
                series: @Html.Raw(ViewBag.ProjectSeries),
                chart: {
                    height: 300,
                    type: "pie"
                },
                labels: @Html.Raw(ViewBag.Labels),
                legend: {
                    position: "bottom"
                },
                dataLabels: {
                    dropShadow: {
                        enabled: !1
                    }
                },
                colors: chartPieBasicColors
            }, (chart = new ApexCharts(document.querySelector("#projectchart"), options)).render()));


        var upadatedonutchart, chartPieBasicColors = getChartColorsArray("labourchart"),
            chartDonutBasicColors = (chartPieBasicColors && (options = {
                series: @Html.Raw(ViewBag.LabourSeries),
                chart: {
                    height: 300,
                    type: "pie"
                },
                labels: @Html.Raw(ViewBag.Labels),
                legend: {
                    position: "bottom"
                },
                dataLabels: {
                    dropShadow: {
                        enabled: !1
                    }
                },
                colors: chartPieBasicColors
            }, (chart = new ApexCharts(document.querySelector("#labourchart"), options)).render()));

        var upadatedonutchart, chartPieBasicColors = getChartColorsArray("investorschart"),
            chartDonutBasicColors = (chartPieBasicColors && (options = {
                series: @Html.Raw(ViewBag.InvestorSeries),
                chart: {
                    height: 300,
                    type: "pie"
                },
                labels: @Html.Raw(ViewBag.Labels),
                legend: {
                    position: "bottom"
                },
                dataLabels: {
                    dropShadow: {
                        enabled: !1
                    }
                },
                colors: chartPieBasicColors
            }, (chart = new ApexCharts(document.querySelector("#investorschart"), options)).render()));

        var upadatedonutchart, chartPieBasicColors = getChartColorsArray("oRatechart"),
            chartDonutBasicColors = (chartPieBasicColors && (options = {
                series: @Html.Raw(ViewBag.ORateSeries),
                chart: {
                    height: 300,
                    type: "pie"
                },
                labels: @Html.Raw(ViewBag.Labels),
                legend: {
                    position: "bottom"
                },
                dataLabels: {
                    dropShadow: {
                        enabled: !1
                    }
                },
                colors: chartPieBasicColors
            }, (chart = new ApexCharts(document.querySelector("#oRatechart"), options)).render()));
    }
</script>
