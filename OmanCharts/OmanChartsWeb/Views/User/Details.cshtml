@model User
@{
    ViewData["Title"] = "Details";
}
@{
    @using Microsoft.AspNetCore.Http;
    @inject IHttpContextAccessor httpContextAccessor
    string role = httpContextAccessor.HttpContext.Session.GetString("Role");
    if (!string.IsNullOrEmpty(role))
    {
        if (role.ToString() == "Admin")
        {
            Layout = "_AdminLayout";
        }
        else if (role.ToString() == "Customer")
        {
            Layout = "_UserLayout";
        }
        else
        {
            Layout = "_PublicLayout";
        }
    }
    else
    {
        Layout = "_PublicLayout";
    }
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Users</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><Link>Home</li>
                    <li class="breadcrumb-item active">User Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>
@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade-show">
        @TempData["errorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade-show">
        @TempData["successMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
<div class="alert alert-success">
    <div class="row">
        <div class="col-lg-3">
            <div class="mb-3">
                <label htmlFor="zoneName" class="form-label">Zone Name : </label>
                <label htmlFor="zoneName" class="form-label">@Html.DisplayFor(model => model.ZoneName)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="mb-3">
                <label htmlFor="companyName" class="form-label">Company Name : </label>
                <label htmlFor="companyName" class="form-label">@Html.DisplayFor(model => model.CompanyName)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="mb-3">
                <label htmlFor="zoneName" class="form-label">Full Name : </label>
                <label htmlFor="zoneName" class="form-label">@Html.DisplayFor(model => model.FullName)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="mb-3">
                <label htmlFor="zoneName" class="form-label">Email : </label>
                <label htmlFor="zoneName" class="form-label">@Html.DisplayFor(model => model.Email)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="mb-3">
                <label htmlFor="zoneName" class="form-label">Phone No : </label>
                <label htmlFor="zoneName" class="form-label">@Html.DisplayFor(model => model.PhoneNumber)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="mb-3">
                <label htmlFor="zoneName" class="form-label">User Name : </label>
                <label htmlFor="zoneName" class="form-label">@Html.DisplayFor(model => model.Email)</label>
            </div>
        </div>
    </div>
    <div>
        <a class="btn btn-danger" asp-action="Index">Back</a>
    </div>
</div>